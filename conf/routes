# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index


POST	/api/user						   		Application.saveUsers
GET		/api/user								Application.getUsers

POST	/api/user						   		Application.login

POST	/api/act								Application.saveAct
GET		/api/act								Application.getAct

#Acts
GET		/api/acts								Act.listActs
GET   	/api/acts/{uri}         				Act.getAct(uri)
POST	/api/acts/{uri}							Act.updateAct(uri)

GET     /input									Redirection.toForm

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
